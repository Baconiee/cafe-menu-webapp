@{
    ViewData["Title"] = "No Products Available";
}

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="display-4 text-muted mb-4">No Products Yet</h1>
                    <p class="lead text-secondary">
                        It looks like there are no products available in the <strong>@ViewBag.CategoryName</strong> category at the moment.
                    </p>
                    <p class="text-muted">
                        Check back later—our team is working hard to add delicious items for you!
                    </p>
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Customer" class="btn btn-primary btn-lg">
                            Back to Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }

    .card-body {
        padding: 3rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 25px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>