@model IEnumerable<CafeMenuWebApp.Models.ProductViewModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.CategoryName - Cafe Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card {
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
            font-family: Arial, sans-serif;
            background-color: #fff;
        }

        .card-image-container {
            padding: 10px;
        }

        .card-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 3px;
        }

        .card-content {
            padding: 5px 10px 15px 10px;
        }

        .product-name {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .tags {
            margin-bottom: 15px;
        }

        .tag {
            display: inline-block;
            background-color: #f0f0f0;
            padding: 3px 6px;
            margin-right: 5px;
            border-radius: 3px;
            font-size: 12px;
        }

        .badge {
            padding: 3px 6px;
            font-size: 12px;
        }

        .price {
            font-size: 18px;
            font-weight: bold;
            color: #dc3545;
        }

        .container {
            margin-top: 100px;
        }

        .product-card {
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">@ViewBag.CategoryName</h1>
        <div class="row justify-content-start">
            @foreach (var product in Model)
            {
                <div class="col-md-3 product-card">
                    <div class="card">
                        <div class="card-image-container">
                            <img src="@product.ImagePath" alt="@product.ProductName" class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="product-name">@product.ProductName</div>
                            <div class="tags">
                                @foreach (var property in product.Properties)
                                {
                                    <span class="tag badge bg-dark">@property</span>
                                }
                            </div>
                            <div class="price">@product.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>