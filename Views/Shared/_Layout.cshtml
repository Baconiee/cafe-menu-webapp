<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafeMenuWebApp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafeMenuWebApp.styles.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav id="custom-navbar" class="navbar navbar-expand-lg navbar-light">
            <a asp-controller="Customer" asp-action="Index" class="navbar-brand ms-3">Ana Sayfa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="Categories">Categories</a>
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="Properties">Properties</a>
                        <a class="nav-link text-light" asp-controller="Admin" asp-action="ProductProperties">Product Properties</a>
                        <li class="nav-item active">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="btn btn-link nav-link text-light">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
